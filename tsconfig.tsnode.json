// tsconfig.tsnode.json
{
    "compilerOptions": {
        "target": "es2020", // Or a more recent version
        "module": "commonjs", // Or "esnext" if you want ES modules
        "moduleResolution": "node", // Crucial: Use Node.js module resolution
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "include": [
        "prisma/**/*"
    ], // Only include prisma files
    "exclude": [
        "node_modules",
        "src"
    ] //Exclude other folders to speed it up
}